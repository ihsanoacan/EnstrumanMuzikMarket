@using DAL
@model  List<City>
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
                <form class="user" method="post" action="@Url.Action("Add")">
                    <div class="form-group row">
                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" id="name" name="DistrictName" placeholder="Name" value="" required>
                        </div>

                        <div class="form-group col-sm-6">
                            <select class="form-control" id="isActive" name="IsActive" placeholder="IsActive" required>
                                <option value="">Is Active?</option>
                                <option value="0">No</option>
                                <option value="1">Yes</option>

                            </select>

                        </div>

                        <div class="form-group col-sm-6">
                            <select class="form-control" id="City_ID" name="City_ID" placeholder="City_ID" required>
                                <option value="">City</option>
                                @foreach(City City in Model)
                                {
                                    <option value="@City.ID">@City.CityName</option>
                                }

                            </select>

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save</button>

                </form>

            </div>
        </div>
    </div>

</div>

