@using DAL
@model City
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
                <form class="user" method="post" action="@Url.Action("Edit")">
                    <div class="form-group row">
                        <div class="form-group col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" id="name" name="CityName" placeholder="Name" value="@Model.CityName" required>
                        </div>

                        <div class="form-group col-sm-6">
                            <select class="form-control" id="isActive" name="IsActive" placeholder="IsActive" required>
                                <option value="">Is Active?</option>
                                @if (Model.IsActive == true)
                                {
                                    <option value="true" selected>Yes</option>
                                    <option value="false">No</option>
                                }
                                else
                                {
                                    <option value="false" selected>No</option>
                                    <option value="true" >Yes</option>
                                }

                            </select>

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save</button>

                </form>

            </div>
        </div>
    </div>

</div>

