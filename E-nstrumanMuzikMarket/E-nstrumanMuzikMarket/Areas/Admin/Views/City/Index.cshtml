@using DAL;
@model List<City>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">

        <a href="@Url.Action("Add")" class="btn btn-primary-outline m-l"><i class="fa fa-plus"></i> EKLE</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        
                        <th>Active</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (City City in Model)
                    {

                        <tr>
                            <td>@City.ID</td>
                            <td>@City.CityName</td>
                            <td>@City.IsActive</td>
                            <td style="text-align: center">
                                <a href="@Url.Action("Edit", new { id = City.ID })" class="btn btn-warning btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("Delete",new { id = City.ID })" class="btn badge-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash-alt"></i></a>


                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


